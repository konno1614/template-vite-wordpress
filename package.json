{
    "name": "template-vite-wordpress",
    "version": "1.0.0",
    "author": "konno1614",
    "main": "index.js",
    "license": "MIT",
    "type": "module",
    "dependencies": {
        "@wordpress/env": "10.11.0"
    },
    "scripts": {
        "start": "npm-run-all wp-start docker-start dev",
        "build": "npm-run-all delete-public delete-assets build-wp image-format-converter docker-stop wp-stop",
        "dev": "vite --host",
        "build-static": "rm -rf dist && vite build",
        "build-wp": "vite build --mode wp",
        "wp-start": "wp-env start",
        "wp-stop": "wp-env stop",
        "wp-update": "wp-env start --update",
        "wp-clean": "wp-env clean all",
        "wp-destroy": "wp-env destroy",
        "wp-export": "wp-env run cli wp db export /var/www/html/wp-content/uploads/backup.sql",
        "wp-import": "wp-env run cli wp db reset --yes && wp-env run cli wp db import /var/www/html/wp-content/uploads/backup.sql",
        "docker-start": "docker-compose up -d",
        "docker-stop": "docker-compose down",
        "image-format-converter": "node ./image-format-converter.js",
        "preview-static": "vite preview",
        "delete-assets": "rimraf root/cms/wp-content/themes/template-vite-wordpress/assets",
        "delete-public": "rimraf root/cms/wp-content/themes/template-vite-wordpress/css root/cms/wp-content/themes/template-vite-wordpress/js root/cms/wp-content/themes/template-vite-wordpress/font root/cms/wp-content/themes/template-vite-wordpress/img root/cms/wp-content/themes/template-vite-wordpress/json",
        "copy-public": "root/cms/wp-content/themes/template-vite-wordpress/css root/cms/wp-content/themes/template-vite-wordpress/js root/cms/wp-content/themes/template-vite-wordpress/font root/cms/wp-content/themes/template-vite-wordpress/img root/cms/wp-content/themes/template-vite-wordpress/json"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "8.13.0",
        "@typescript-eslint/parser": "8.13.0",
        "ansi-colors": "^4.1.3",
        "eslint": "9.14.0",
        "eslint-config-prettier": "9.1.0",
        "fancy-log": "^2.0.0",
        "glob": "11.0.0",
        "globule": "^1.3.4",
        "npm-run-all": "^2.1.0",
        "prettier": "3.3.3",
        "rimraf": "^6.0.1",
        "sass": "1.80.6",
        "sharp": "^0.33.5",
        "stylelint": "16.10.0",
        "stylelint-config-recess-order": "5.1.1",
        "stylelint-config-standard-scss": "13.1.0",
        "typescript": "5.6.3",
        "vite": "^5.4.10",
        "vite-plugin-static-copy": "^2.0.0"
    }
}
