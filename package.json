{
    "name": "template-vite-wordpress",
    "version": "1.0.0",
    "author": "konno1614",
    "main": "index.js",
    "license": "MIT",
    "type": "module",
    "dependencies": {
        "@wordpress/env": "10.11.0"
    },
    "scripts": {
        "dev": "vite --host",
        "build": "rm -rf dist && vite build",
        "build-wp": "rimraf root/cms/wp-content/themes/template-vite-wordpress/assets root/cms/wp-content/themes/template-vite-wordpress/css root/cms/wp-content/themes/template-vite-wordpress/js root/cms/wp-content/themes/template-vite-wordpress/font && vite build --mode wp && node ./image-format-converter.js",
        "wp-start": "wp-env start",
        "wp-stop": "wp-env stop",
        "wp-export": "wp-env run cli wp db export /var/www/html/wp-content/uploads/backup.sql",
        "wp-import": "wp-env run cli wp db reset --yes && wp-env run cli wp db import /var/www/html/wp-content/uploads/backup.sql",
        "preview": "vite preview",
        "image-format-converter": "node ./image-format-converter.js",
        "format": "yarn run _typecheck && yarn run _lint-fix && yarn run _prettier-fix",
        "_typecheck": "yarn run tsc --noEmit ",
        "_lint": "eslint --ext .ts,.js --ignore-path .gitignore . && stylelint \"**/*.{scss,css}\"",
        "_prettier": "prettier --check \"**/*.{html,scss,ts,js}\" --ignore-path .prettierignore",
        "_lint-fix": "eslint --fix --ext .ts,.js --ignore-path .gitignore . && stylelint --fix \"**/*.{scss,css}\"",
        "_prettier-fix": "prettier --write \"**/*.{html,scss,ts,js}\" --ignore-path .prettierignore"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "8.13.0",
        "@typescript-eslint/parser": "8.13.0",
        "ansi-colors": "^4.1.3",
        "eslint": "9.14.0",
        "eslint-config-prettier": "9.1.0",
        "fancy-log": "^2.0.0",
        "glob": "11.0.0",
        "globule": "^1.3.4",
        "prettier": "3.3.3",
        "rimraf": "^6.0.1",
        "sass": "1.80.6",
        "sharp": "^0.33.5",
        "stylelint": "16.10.0",
        "stylelint-config-recess-order": "5.1.1",
        "stylelint-config-standard-scss": "13.1.0",
        "typescript": "5.6.3",
        "vite": "^5.4.10",
        "vite-plugin-static-copy": "^2.0.0"
    }
}
